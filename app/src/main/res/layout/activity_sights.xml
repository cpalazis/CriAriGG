<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SightsActivity">

    <TextView
        android:id="@+id/textView_M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView_M"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="164dp" />

    <ImageView
        android:id="@+id/Museums_image"
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_M"
        tools:layout_editor_absoluteX="177dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Banks_Image"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_B"
        tools:layout_editor_absoluteX="181dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Hotel_Image"
        android:layout_width="56dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_H"
        tools:layout_editor_absoluteX="178dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Caffe_Image"
        android:layout_width="77dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_C"
        tools:layout_editor_absoluteX="167dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/Restaurants_Image"
        android:layout_width="69dp"
        android:layout_height="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_R"
        app:layout_constraintVertical_bias="0.483"
        tools:layout_editor_absoluteX="171dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="TextView_B"
        app:layout_constraintTop_toBottomOf="@+id/Museums_image"
        tools:layout_editor_absoluteX="168dp" />

    <TextView
        android:id="@+id/textView_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="TextView_H"
        app:layout_constraintTop_toBottomOf="@+id/Banks_Image"
        tools:layout_editor_absoluteX="164dp" />

    <TextView
        android:id="@+id/textView_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView_C"
        app:layout_constraintTop_toBottomOf="@+id/Hotel_Image"
        tools:layout_editor_absoluteX="164dp" />

    <TextView
        android:id="@+id/textView_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView_R"
        app:layout_constraintTop_toBottomOf="@+id/Caffe_Image"
        tools:layout_editor_absoluteX="169dp" />
</androidx.constraintlayout.widget.ConstraintLayout>